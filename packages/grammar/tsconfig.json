{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "lib": ["ES2022", "DOM"],
    "declaration": false,
    "strict": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": false,
    "outDir": "./dist"
  },
  "include": ["src/ts/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts"]
}